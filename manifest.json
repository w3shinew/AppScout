{
  "manifest_version": 3,
  "name": "Permission Exposure Analyzer",
  "version": "1.1",
  "description": "Analyze risky browser permissions exposed to websites",
  "permissions": [
    "tabs",
    "contentSettings"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
